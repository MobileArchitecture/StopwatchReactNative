{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,

  "files.associations": {
      "*.js": "javascriptreact"
  },
  "javascript.validate.enable": false,

  "nodeTdd.activateOnStartup": false,
  "nodeTdd.buildOnActivation": true,
  "nodeTdd.testScript": "tdd",
  "nodeTdd.reporter": "tap",
  "nodeTdd.showCoverage": true,
  "nodeTdd.glob": "src/**/*.{js,ts,jsx,tsx}",

  "jest.pathToJest": "node_modules/jest/bin/jest.js"
}